<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='shortcut icon' href='/images/favicon.ico' type='image/x-icon'/>
    <link href="https://fonts.googleapis.com/css?family=Pacifico|Quicksand" rel="stylesheet">

</head>

<body>
<img class="background book-bg" src="/images/bookshelf.jpeg">

    <% include templates/navigation.ejs%>
    <% include templates/flash.ejs %>
<div class="container main-body">
    <% if (errors.length > 0){ %>
        <% errors.forEach(function(item){ %>
            <div class="alert alert-danger"><%=item.msg%></div>
        <%})%>
    <%}%>

    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Purchase <%=booktitle%></h3>
                </div>
                <div class="card-body text-center">
                    <img src='<%=imageURL%>' alt="Book Image" style="width:300px;height:400px;">
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%=description%>
                    </li>
                    <li class="list-group-item">
                        <strong>Course:</strong> <%=course%>
                    </li>
                    <li class="list-group-item">
                        <strong>Author:</strong> <%=author%>
                    </li>
                    <li class="list-group-item">
                        <strong>Price:</strong> $<%=price.toFixed(2)%>
                    </li>
                    <li class="list-group-item">
                        <strong>Seller:</strong> <%=seller%>
                    </li>
                    <li class="list-group-item">
                        <strong>Availability:</strong> <%=avail%>
                    </li>
                </ul>
            </div>
        </div>  
    </div>

    <form method="post" action='<%="/submit/purchase/" + book_id%>' >
        <div class="form-group text-center">
            <label>Message to Seller (<%=seller%>)</label>
            <textarea class="form-control" name="message" placeholder="Let the seller know you want to purchase and they will get back to you."></textarea>
        </div>
        <div class="form-group text-center button">
            <button type="submit" class="btn btn-primary">Add to Cart</button>
        </div>
    </form>
    <% include templates/footer.ejs%>

</div>
</body>
</html>
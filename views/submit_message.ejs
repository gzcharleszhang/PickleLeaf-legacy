<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='shortcut icon' href='/images/favicon.ico' type='image/x-icon'/>
    <link href="https://fonts.googleapis.com/css?family=Pacifico|Quicksand" rel="stylesheet">

</head>

<body>
<img class="background book-bg" src="/images/bookshelf.jpeg">

<% include templates/navigation.ejs%>
<% include templates/flash.ejs %>
<div class="container main-body">
<% if (errors.length > 0){ %>
<% errors.forEach(function(item){ %>
<div class="alert alert-danger"><%=item.msg%></div>
<%})%>
<%}%>

<h3 class="page-header">Send a Message</h3>
<form method="post" action='/messages/submit'>
    <div class="form-group text-center">
        <label>Recipient's Username</label>
        <input type="text" class="form-control" name="receiver_name" value="<%=recipient_name%>"placeholder="username">
    </div>
    <div class="form-group text-center">
        <label>Title (optional)</label>
        <input type="text" class="form-control" name="title" placeholder="(no_title)">
    </div>
    <div class="form-group text-center">
        <label>Message</label>
        <textarea class="form-control" name="content" placeholder="Write your message here..."></textarea>
    </div>
    <div class="form-group text-center button">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
</div>
<% include templates/footer.ejs%>
</body>
</html>
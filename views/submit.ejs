<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <% include templates/navigation.ejs%>
    <% include templates/flash.ejs %>

    <% if (errors.length > 0){ %>
        <% errors.forEach(function(item){ %>
            <div class="alert alert-danger"><%=item.msg%></div>
        <%})%>
    <%}%>

    <h3 class="page-header">Sell <%=booktitle%></h3>
    <form method="post" action="<%='/submit/book/' + setbookID%>">
        <div class="form-group text-center">
            <label>Selling Price (CAD)</label>
            <input type="number" class="form-control" name="price" placeholder="Amount in CAD" min="0" step="0.01">
        </div>
        <div class="form-group text-center">
            <label>Description</label>
            <textarea class="form-control" name="description" placeholder="Condition of the book, seller location, accessibility, online codes etc..."></textarea>
        </div>
        <div class="form-group text-center button">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</body>
</html>
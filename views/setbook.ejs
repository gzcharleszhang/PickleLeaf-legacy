<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <% include templates/navigation.ejs%>
    <% include templates/flash.ejs %>

    <h3 class="page-header"><%= booktitle %></h3>
    <div class="row">
        <div class="col-md-4 offset-md-2">
            <div class="card text-center">
                <div class="card-body">
                    <img src='<%=imageURL%>' alt="Book Image" style="width:300px;height:400px;">
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Course:</strong> <%=course%>
                    </li>
                    <li class="list-group-item">
                        <strong>Author:</strong> <%=author%>
                    </li>
                </ul>
                    <a href='<%="/submit/book/" + setbookid%>' class="btn btn-primary">Sell this book</a>
            </div>
        </div>
    </div>

    <h3 class="page-header">Book Listing</h3>
    <table class="table table-striped text-center">
        <thead class="thead-dark">
        <tr>
            <th>Seller</th>
            <th>Price</th>
            <th>Availability</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% if (books.length > 0){ %>
        <% books.forEach(function(book){ %>
        <tr>
            <td>
                <%=book.username%>
            </td>
            <td>
                $<%=book.price.toFixed(2)%>
            </td>
            <td>
                <% if (book.sold){%>
                    Sold
                <%}else{%>
                    Available
                <%}%>
            </td>
            <td>
                <a href='<%='/book/'+book._id%>'>view</a>
            </td>
        </tr>
        <%})%>
        <%}%>
        </tbody>
    </table>
    <% include templates/footer.ejs%>
</body>
</html>